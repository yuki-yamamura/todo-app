{
  "name": "nextjs-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "format": "prettier --write --log-level=warn 'src/**/*.{js,jsx,ts,tsx,html,css,gql,graphql,json}'",
    "lint:es": "eslint --fix 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:style": "stylelint --fix 'src/**/*.css'",
    "lint": "npm run -s lint:es; npm run -s lint:style",
    "prepare": "husky install",
    "start": "next start",
    "test": "jest --watch --verbose",
    "test:ci": "jest --ci --silent --passWithNoTests",
    "type": "bash -c tsc --noEmit"
  },
  "dependencies": {
    "@types/node": "18.15.3",
    "@types/react": "^18.2.8",
    "@types/react-dom": "18.0.11",
    "eslint": "^8.45.0",
    "eslint-config-next": "^13.4.12",
    "next": "^13.4.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "the-new-css-reset": "^1.9.0",
    "typescript": "^5.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@testing-library/dom": "^9.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-testing-library": "^5.10.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^3.0.1",
    "sort-imports": "^1.1.0",
    "stylelint": "^15.3.0",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-standard": "^31.0.0",
    "stylelint-order": "^6.0.3"
  }
}
